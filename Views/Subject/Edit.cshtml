@model SchoolMangmentSystemCore.Models.subject

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Subject</h1>

<hr class="text-center bg-primary" style="width:100px" />

<form asp-action="Edit">
