@model IEnumerable<SchoolMangmentSystemCore.Models.subject>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">All Subjects</h1>
<hr class="text-center bg-primary" style="width:100px" />
<p>
    <a asp-action="Create" class="btn btn-primary" >Create New Subject</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxStudents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxStudents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubjectId" class="btn btn-success" >Edit</a> 
                @*<a asp-action="Details" asp-route-id="@item.SubjectId" class="btn btn-info" >Details</a>*@
                <a asp-action="Delete" asp-route-id="@item.SubjectId" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
